<h3>Comments</h3>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Comment</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>

      <td>
      <%= link_to book_comment.user do %>
      <%= book_comment.user.name %>
      <% end %>
      </td>

      <td><%= book_comment.comment %></td>

      <% if book_comment.user_id == current_user.id %>
      <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-sm btn-danger" %></td>
      <% else %>
      <td></td>
      <% end %>

      <td class="small"><%= book_comment.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
    <% end %>

  </tbody>
</table>