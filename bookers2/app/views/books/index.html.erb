<% if flash[:notice_delete] %>
    <p id="notice">
        <%= flash[:notice_delete] %>
    </p>
<% end %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<!--投稿フォーム-->
<h2>New Book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <div>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>


  <div>
    <label for="book_body">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>

<% end %>