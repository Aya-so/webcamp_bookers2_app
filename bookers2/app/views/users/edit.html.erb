<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user, local: true do |f| %>

      <div class="form-group">
        <p>Name</p>
        <p><%= f.text_field :name, autofocus: true, class:"form-control" %></p>
      </div>

      <div class="form-group">
        <p>Image</p>
        <p><%= f.attachment_field :profile_image %></p>
      </div>


      <div class="form-group">
        <p>Introduction</p>
        <p><%= f.text_area :introduction, autofocus: true, class:"form-control" %></p>
      </div>

      <div class="form-group">
        </p><%= f.submit "Update User", class:"btn btn-secondary" %></p>
      </div>

      <% end %>

    </div>
  </div>
</div>