<% if flash[:notice] %>
    <p id="notice">
        <%= flash[:notice] %>
    </p>
<% end %>

<!--検索窓-->
<div class="container">
  <div class="text-center">
    <%= render "searches/search_form" %>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'layouts/list', book: Book.new, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>

            <td><%= link_to book.title, book_path(book.id) %></td>

            <td><%= book.body %></td>

            <td class="favorite"><%= render "favorites/favorite", book: book %></td>

            <td>コメント数: <%= book.book_comments.count %></td>

            <td class="small"><%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></td>

          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>